<div id="add-email" class="container">
  <h1>Finish Sign-Up</h1>
  <%= simple_form_for(current_user, :as => 'user', :url => finish_signup_path(current_user), :html => { role: 'form'}) do |f| %>
    <% if @show_errors && current_user.errors.any? %>
      <div id="error_explanation">
        <% current_user.errors.full_messages.each do |msg| %>
          <%= msg %><br>
        <% end %>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :email %>
      <div class="controls">
        <%= f.text_field :email, required: true, :autofocus => true, :value => '', class: 'form-control input-lg', placeholder: 'Example: email@me.com' %>
        <p class="help-block">Please provide your email address. Your sign-up will not be complete until added.</p>
      </div>
      <%= f.input :username, required: true, input_html: { maxlength: 20 }, placeholder: 'profile address', hint: "http://rhymesanddesigns.com/johndoe"  %>
    </div>
    <div class="actions">
      <%= f.submit 'Continue', :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>