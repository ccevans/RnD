<div class="stepbackward">
			<%= link_to campaign_art_path(@campaign, @previous_art) do %>
				<span class="glyphicon glyphicon-step-backward" aria-hidden="true"></span>
			<% end %>
		</div>
		<div class="stepforward">
			<%= link_to campaign_art_path(@campaign, @next_art) do %>
				<span class="glyphicon glyphicon-step-forward" aria-hidden="true"></span>
			<% end %>
		</div>


<div class="container-show">

	<div class="art-box2">
		<div class="vote-box2">
			<%= @art.ratings.count %></br>Votes
		</div>

				<% if user_signed_in? %>

					<% if @current_ratings.empty? || @current_ratings.nil? %>
					
						<%= render 'ratings/form' %>
					<% else %>

						<% @current_ratings.each do | current_rating| %>
						Voted: <div class="star-rating" data-score= <%= current_rating.rate %> ></div>
						<% end %>

						
					<% end %>
				<% else %>
					<%= render 'ratings/form' %>
				<% end %>


		  <div class="rate-box2">
              <%= @avg_rating %></br>Avg Score
          </div>

	</div>


	<div class="container-art2">

			<%= image_tag @art.image.url(:medium) %>
	</div>

	<div class="container-extra">
	 <ul>
        <li><%= @art.impressionist_count(:filter=>:session_hash) %> <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></li>
        <li><%= @art.commentarts.count %> <span class="glyphicon glyphicon-comment" aria-hidden="true"></span></li>
     </ul>
     
        <% unless @art.tags.nil? || @art.tags.empty? %>
        <ul>
		<li>
  			<% @art.tags.each do |tag| %>
  				<%= link_to tag.name, tagged_url(:tag => tag.name) %>
  			<% end %>
			</li>
		</ul>
		<% end %>

		   <ul>

        	<li>Posted By: <a id="popoverExampleTwo" data-placement="auto left" data-trigger="click" return false;><%= image_tag @art.user.avatar.url(:mini) %><%= link_to @art.user.username, profile_url(:id => @art.user.username) %></a></li>
        	
        </ul>
        <ul>
        	<li><strong>Experiment</strong> |  <a id="popoverExampleThree" data-placement="auto left" data-trigger="click"><%= @art.campaign.title %> </a></li>
        </ul>


  <!-- Popover 2 hidden content -->
  <div id="popoverExampleTwoHiddenContent" style="display: none">
     <div>
     	<%= image_tag @art.user.avatar.url(:thumb) %>
					<%= link_to @art.user.username, profile_url(:id => @art.user.username) %>
					
					</br>
					<div class="following-show">
						<p><%= @art.user.follow_count %> Following  | 
						<%= @art.user.followers_count %> Followers</p>
						<% if user_signed_in? %>
							<% if current_user == @art.user %>
								<p></p>
							<% elsif  @art.user.all_following.include?(current_user) %>
								<%= link_to "Unfollow", unfollow_profile_path(@art.user.username) %>
							<% else %>
								<%= link_to "Follow", follow_profile_path(@art.user.username) %>
							<% end %>
						<% else %>
							<p><%= link_to "Sign Up To Follow", new_user_registration_path %></p>
						<% end %>
					</div>
					<hr>
					<div class="points-show">
						Points | <%= @art.user.points %>
					</div>


     </div>
  </div>  
  <!-- Popover 2 hidden title -->
  <div id="popoverExampleTwoHiddenTitle" style="display: none">
     
  </div> 

    <!-- Popover 2 hidden content -->
  <div id="popoverExampleThreeHiddenContent" style="display: none">
     <div>
  


     </div>
  </div>  
  <!-- Popover 2 hidden title -->
  <div id="popoverExampleThreeHiddenTitle" style="display: none">
     
  </div> 

 
        <div class="artist-info">
		    <ul>
		        <li><strong>Type of Art: </strong><%= @art.typeart %></li>
			
				<li>| <%= link_to 'More Info', @art.link %></li>

			</ul>

        </div>

        <ul>
        		<li><% if can? :update, @art %>
		<%= link_to 'Edit', edit_campaign_art_path(@art.campaign, @art) %> | 
		<% end %>
		<% if can? :destroy, @art %>
		<%= link_to 'Destroy', [@art.campaign, @art], method: :delete, data: {confirm: "Are you sure?" } %>
		<% end %></li>

        </ul>
    </div>











	<% unless @art.description.nil? || @art.description.empty? %>
	<div class="container-desc">
		<%= simple_format(@art.description) %>
	</div>
	<% end %>
		
	<div class="container-comment">
	<h2 class="comment_count">
		<%= pluralize(@art.commentarts.count, "Response") %></h2>
		<hr />
		<% @commentarts.each do |commentart| %>
			<div class="comment">
				<%= image_tag commentart.user.avatar.url(:mini) %>
				<p class="username"> <%= commentart.user.username %></p></br>
				<p class="content"> <%= commentart.content %></p>
				<p class="time-created"><%= time_ago_in_words(commentart.created_at) %></p>
				<hr />
			</div>
		<% end %>
	<%= render 'commentarts/form' %>
</div>
</div>

<section class="art-section">


<div id="arts" class="transitions-enabled">
    
      <% @random_arts.each do |random_art| %>
        <div class="container-art">
            <div class="art-box">

                 <% @current_ratings.each do | current_rating| %>
                    Voted: <div class="star-rating" data-score= <%= current_rating.rate %> ></div>
                    <% end %>



              <div class="vote-box">
                  <%= random_art.ratings.count %></br>Votes
              </div>

                <% if user_signed_in? %>

                  <% if @current_ratings.empty? || @current_ratings.nil? %>
                  
                      <%= simple_form_for([random_art, random_art.ratings.build]) do |f| %>
                      <%= f.error_notification %>

                    <div class="field">
                      <div class="star-rating"></div>
                    </div>
                        <%= f.hidden_field :art_id, value: art.id %>
                      <%= f.button :submit, "Rate" %>
                      
                    <% end %>
                  <% else %>

                    <% @current_ratings.each do | current_rating| %>
                    Voted: <div class="star-rating" data-score= <%= current_rating.rate %> ></div>
                    <% end %>

                    
                  <% end %>
                <% else %>
                
                  <%= simple_form_for([random_art, random_art.ratings.build]) do |f| %>
                  <%= f.error_notification %>

                <div class="field">
                  <div class="star-rating"></div>
                </div>
                    <%= f.hidden_field :art_id, value: art.id %>
                  <%= f.button :submit, "Rate" %>
                  
                <% end %>
            <% end %>
              <div class="rate-box">
                <%= @avg_rating %></br>Avg Score
              </div>
          </div>
         
          <%= link_to campaign_art_path(@campaign, random_art) do %>
            <%= image_tag random_art.image.url(:small) %>
          <% end %>

    

         <ul>
              <li><%= random_art.impressionist_count(:filter=>:session_hash) %> <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></li>
              <li>
                  <%= pluralize(random_art.ratings.count, "Vote") %> 
              </li>

            <li><%= random_art.commentarts.count %> <span class="glyphicon glyphicon-comment" aria-hidden="true"></span></li>
              <li><%= image_tag random_art.user.avatar.url(:mini) %><%= link_to random_art.user.username, profile_url(:id => random_art.user.username) %></li>
          </ul>
          <br />
        <ul class="tag-list">
        <li><% random_art.tags.any? %>
          <% random_art.tags.each do |tag| %>
          <%= link_to tag.name, tagged_url(:tag => tag.name) %>
          <% end %></li>
        </ul>
      </div>
      <% end %>
</div>

        
    <br>
 <div class="back-footer">
	<%= link_to 'Add Design', new_campaign_art_path(@campaign) %>
	<%= link_to 'Design Center', campaign_arts_path %>
</div>

  </section>





