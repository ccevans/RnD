<%= simple_form_for(@campaign, html: { multiport: true }) do |f| %>

      <%= f.error_notification %>

  <%= f.input :title, label: "Title" %>
  <%= f.input :description, label: "Tell us more" %>
  <%= f.input :timer, label: "Time" %>
  <%= f.input :timer2, label: "Time2" %>
  <%= f.collection_select :status, Campaign::STATUS, :to_s, :humanize %>
  <%= f.file_field :image %>

    <%= f.input :artist, label: "Artist" %>
  <%= f.input :song, label: "Song" %>
  <%= f.input :album, label: "Album" %>
  <%= f.input :link, label: "Link" %>

  <%= f.button :submit, "Submit", class: "button" %>



<% end %>