<% if user_signed_in? %>
  <div class="header-campaign">
    <h1>Welcome to The LAB</h1>
    <h2><%= current_user.name %></h2>
    <p>Let's build something crazy, something flammable.  Contribute to the community where we turn our favorite artists' lyrics into designs and merch.  <br /><%= link_to "How It Works", '#' %></p>

  </div>  
<% else %>
  <div class="header-campaign">
    <h1>Welcome to The LAB</h1>
    <h2><%= link_to "Join Today", new_user_registration_path %></h2>
    <p>Let's build something crazy, something flammable.  Become part of our passionate community where we turn our favorite artists' lyrics into designs and merch.  <br /><%= link_to "How It Works", '#' %></p>

  </div>  
<% end %>

<div class="explore-header">
  <span class="explore-title">Explore</span> | <%= link_to "Rhyme Center", '/campaigns/2/lyrics' %> | <%= link_to "Design Center", '/campaigns/2/arts' %>
  </div>




<section class="campaign-section">
  <div id="campaigns" class="transitions-enabled">
        <div class="free-campaign">
          <div class="campaign-img">
                <% unless @free_campaign.image.nil? %>
                  <%= image_tag @free_campaign.image.url(:medium) %>
                  <% end %>
              </div> 
               <%= link_to 'Add Your Fav Lyrics & Designs', @free_campaign %>

        </div>
  </section>

<section class="campaign-section">
<h1>Current Experiments</h1>
<div id="campaigns2" class="transitions-enabled">
  <% @open_campaigns.each do |open_campaign| %>
    <div class="campaign-md">
       <% unless open_campaign.image.nil? %>
        <div class="campaign-img">
            <%= image_tag open_campaign.image.url(:medium) %>
        </div> 
        <% end %>

        <div class="campaign-info">
          <ul>
             <% unless open_campaign.title.nil? || open_campaign.title.empty? %>
            <li><strong><%= link_to simple_format(open_campaign.title), open_campaign %></strong></li>
            <% end %>
            <% unless open_campaign.timer.nil? || open_campaign.timer.empty? %>
            <li><%= open_campaign.timer %> Left</li>
            <% end %>
            <li>Reward: $100 plus royalties</li>
          </ul>

        </div>
      </div>
    <% end %>
  </div>
</section>

<section class="campaign-section">
<h1>Past Experiments</h1>
<div id="campaigns3" class="transitions-enabled">
      <% @closed_campaigns.each do |closed_campaign| %>
    <div class="campaign-md">
      <% unless closed_campaign.image.nil? %>
        <div class="campaign-img">
            <%= image_tag closed_campaign.image.url(:medium) %>
        </div> 
        <% end %>

        <div class="campaign-info">
          <ul>
            <% unless closed_campaign.title.nil? || closed_campaign.title.empty? %>
            <li><strong><%= link_to simple_format(closed_campaign.title), closed_campaign %></strong></li>
            <% end %>
            <% unless closed_campaign.timer.nil? || closed_campaign.timer.empty? %>
            <li><%= closed_campaign.timer %> Left</li>
            <% end %>
            <li>Reward: $100 plus royalties</li>
          </ul>

        </div>
      </div>
    <% end %>


  </div>
</section>

 