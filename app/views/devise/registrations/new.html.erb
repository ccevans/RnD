<div id="signup">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <div class="form-break">Sign Up</div>
    <hr>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true, placeholder: 'John Doe' %>
  	<%= f.input :username, required: true, placeholder: 'profile address', hint: "http://rhymesanddesigns.com/johndoe"  %>
    <%= f.input :email, required: true, placeholder: 'yourname@example.com' %>

    

   <% if can? :manage, :all %>
    <%= f.collection_select :role, User::ROLES, :to_s, :humanize, :selected => 'registered' %>
    <% else %>
       <%= f.hidden_field :role, :value => 'registered' %>
    <% end %>

    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<div class="form-footer">
<%= render "devise/shared/links" %>
</div>
</div>



