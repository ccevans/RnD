
<div class="profile-box2">
 <div class="form-break">Account</div>
    <hr>
<%= image_tag @user.avatar.url(:medium) %>
  
  <h1><%= @user.username %> </h1>
</div>


<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), input_html: { class: 'form-horizontal' }, html: { method: :put }) do |f| %>
  <%= f.error_notification %>

    <div class="form-break">Update Avatar</div>
    <hr>
    <div class="avatar-img">
      <%= image_tag @user.avatar.url(:thumb) %>
    </div>
    <%= f.file_field :avatar %>
    <div class="form-break">Update Profile Background</div>
    <hr>
    <%= image_tag @user.profileimg.url(:medium) %>
    <%= f.file_field :profileimg %>

    <div class="form-break">Update Profile</div>
    <hr>
     <div class="form-group">
    <%= f.input :name, required: true, autofocus: true %>
  </div>
    <div class="form-group">
    <%= f.input :username, required: true %>
  </div>
  <div class="form-group">
    <%= f.input :email, required: true %>
  </div>

    <div class="form-group">
    <%= f.input :location, required: false %>
  </div>

  <div class="form-group">
    <%= f.input :website, required: false, hint: "Format: http://rhymesanddesigns.com" %>
  </div>

  <div class="form-group">
    <%= f.input :bio, required: false %>
  </div>
    
<% if can? :manage, :all %>
    <div class="form-break">Update Role</div>
    <hr>
    <%= f.collection_select :role, User::ROLES, :to_s, :humanize %>
    <% end %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

     <div class="form-break">Change Password</div>
     <hr>
    <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
    <%= f.input :password_confirmation, required: false %>

    <div class="form-break">Enter Password for Updates</div>
    <hr>
    <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>


  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<div class="form-footer">

<div class="form-break">Cancel Account</div>
    <hr>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>